<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add express flag column and keep native confirm buttons -->
    <record id="view_order_form_express_delivery" model="ir.ui.view">
        <field name="name">sale.order.form.express.delivery</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Добавляем умную кнопку Delivery в шапку -->
            <xpath expr="//header" position="inside">
                <button name="action_view_delivery_custom" type="object" class="oe_stat_button" invisible="['|', ('state', 'in', ('draft','sent')), ('delivery_count', '=', 0)]">
                    <field name="delivery_count" widget="statinfo" string="Delivery"/>
                </button>
            </xpath>
            <!-- Add express column to the one2many list of order lines -->
            <xpath expr="//field[@name='order_line']//list/field[@name='name']" position="after">
                <field name="express_delivery" string="Express" optional="show"/>
                <field name="express_picking_name" string="Express Picking" optional="show" readonly="1"/>
            </xpath>
        </field>
    </record>

    <!-- Наследование представления заказа для ограничения выбора продуктов -->
    <record id="view_order_form_inherit_restrict_products" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.restrict.products</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Добавляем скрытое поле для домена -->
            <xpath expr="//field[@name='product_template_id']" position="before">
                <field name="available_product_domain" invisible="1"/>
            </xpath>
            
            <!-- Настраиваем product_template_id для обновления домена -->
            <xpath expr="//field[@name='product_template_id']" position="attributes">
                <attribute name="context">{'default_order_id': parent.id, 'active_model': 'sale.order.line', 'active_id': id, 'line_id': id}</attribute>
                <attribute name="options">{'no_create': True}</attribute>
                <attribute name="domain">[('id', 'not in', parent.used_product_template_ids)]</attribute>
            </xpath>
            
               <!-- Добавляем кнопки для проверки статуса продуктов -->
               <xpath expr="//header" position="inside">
                   <button name="action_get_products_status" type="object" class="oe_stat_button" string="Products Status" help="Check selected and available products"/>
                   <button name="action_test_highlight" type="object" class="oe_stat_button" string="Test Highlight" help="Test product highlighting"/>
               </xpath>
        </field>
    </record>

    <!-- Добавляем кнопку "My button" в header -->
    <record id="view_order_form_inherit_print_button" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.print.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Добавляем кнопку в header как smart button -->
            <xpath expr="//header" position="inside">
                <button name="%(action_report_invoice_payment)d" 
                        type="action" 
                        class="oe_stat_button" 
                        string="My button"
                        help="Счет на оплату">
                    <i class="fa fa-file-text-o" role="img" aria-label="Print" title="Print"/>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Расширение печатной формы Sale Order для добавления колонок Express Delivery и Express Picking -->
    <template id="report_saleorder_document_inherit_express" inherit_id="sale.report_saleorder_document">
        <!-- Добавляем колонки в заголовок таблицы после колонки Description -->
        <xpath expr="//th[@name='th_description']" position="after">
            <th name="th_express_delivery" class="text-center">
                <span>Express</span>
            </th>
            <th name="th_express_picking" class="text-start">
                <span>Express Picking</span>
            </th>
        </xpath>
        
        <!-- Добавляем ячейки в тело таблицы после названия продукта -->
        <xpath expr="//td[@name='td_name']" position="after">
            <td name="td_express_delivery" class="text-center">
                <span t-if="line.express_delivery">✓</span>
                <span t-if="not line.express_delivery">—</span>
            </td>
            <td name="td_express_picking" class="text-start">
                <span t-if="line.express_picking_name" t-field="line.express_picking_name"/>
            </td>
        </xpath>
    </template>
</odoo>